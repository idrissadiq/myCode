package arraysorting;

/* Idris Sadiq

** 04/20/2017

** This program demonstrates my implementation of three popular sorting 
   algorithms, namely, Selection Sort, Bubble Sort, and Insertion Sort. The 
   program will sort an array of integers and display the result to the console. 
   
   The sorting methods used in this program are defined in the "SortingMethods" 
   class
*/

import java.util.Arrays;

public class ArraySorting extends SortingMethods{

    public static void main(String[] args) {
        SortingMethods ob = new SortingMethods(); // SortingMethods object
        
        // Selection sort
        double[] selectionArray = {3, 44, 8, 55, 1};
        ob.selectionSort(selectionArray);
        System.out.println("Using selection sort: " + Arrays.toString(selectionArray));
        
        // Bubble sort
        double[] bubbleArray = {3, 44, 8, 55, 1};
        ob.bubbleSort(bubbleArray);
        System.out.println("Using bubble sort: " + Arrays.toString(bubbleArray));
        
        // Insertion sort
        double[] insertionArray = {3, 44, 8, 55, 1};
        ob.bubbleSort(insertionArray);
        System.out.println("Using insertion sort: " + Arrays.toString(insertionArray));
    }
}
